{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "preserve",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": false, // TODO: set to true, fix errors
        "noImplicitThis": true,
        "removeComments": false,
        "sourceMap": true,
        "noStrictGenericChecks": true,
        "forceConsistentCasingInFileNames": true,
        "suppressExcessPropertyErrors": true,
        "noErrorTruncation": true,
        "noUnusedLocals": false,
        "baseUrl": "./src",
        "lib": [
            "dom",
            "es5",
            "es2015.core",
            "es2015.collection",
            "es2015.iterable",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "es2015.promise",
            "scripthost",
            "es2016.array.include",
            "esnext.asynciterable"
        ],
        "skipLibCheck": true
    },
    "include": [
        "./**/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        ".internals",
        "public",
        "build",
        ".temp",
        ".vscode"
    ]
}
